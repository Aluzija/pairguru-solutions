%table.table.table-striped
  %tbody
    - movies.each_with_index do |movie, i|
      %tr
        %td= i + 1
        %td
          %img.img-rounded{ src: @api.image_url(movie.title.split.join("%20")), height: "160", width: "108" }
        %td
          %h4
            = link_to movie.title, movie_path(movie)
            = @api.rating(movie.title.split.join("%20"))
          %p
            %strong
              = link_to movie.genre.name, movies_genre_path(movie.genre)
            = ' (' + movie.released_at.to_s + ')'
          %p= @api.description(movie.title.split.join("%20"))
